<script type="text/javascript">
    $('#btnCreateFeedback').click(function () {
        var content = $('#txtContent').val();
        $.ajax({
            url: "/Contact/CreateFeedBack",
            type: "POST",
            data: { Content: content },
            success: function (rs) {
                if (rs == -1) {
                    // chuyển qua đăng nhập
                    location.href = "/FrontEnd/HomeFrontEnd/Login";
                } else if (rs > 0) {
                    // thành công
                    swal({
                        title: "Thành công !",
                        text: "",
                        icon: "success"
                    })
                }
                // thất bại
                swal({
                    title: "Thất bại !",
                    text: "",
                    icon: "Errorwarning"
                })
            }
        });
    });
</script>