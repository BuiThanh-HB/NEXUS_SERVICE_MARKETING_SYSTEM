                                <input type="submit" class="button pull-right wow fadeInRight" id="btnCreateFeedback" value="Gửi">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div> <!-- .inner-content -->

<script type="text/javascript">
    $('#btnCreateFeedback').click(function () {
        var content = $('#txtContent').val();
        $.ajax({
            url: "/Contact/CreateFeedBack",
            type: "POST",
            data: { Content: content },
            success: function (rs) {
                if (rs == -1) {
                    // chuyển qua đăng nhập
                    location.href = "/FrontEnd/HomeFrontEnd/Login";
                } else if (rs > 0) {
                    // thành công
                    swal({
                        title: "Thành công !",
                        text: "",
                        icon: "success"
                    })
                }
                // thất bại
                swal({
                    title: "Thất bại !",
                    text: "",
                    icon: "Errorwarning"
                })
            }
        });
    });
</script>