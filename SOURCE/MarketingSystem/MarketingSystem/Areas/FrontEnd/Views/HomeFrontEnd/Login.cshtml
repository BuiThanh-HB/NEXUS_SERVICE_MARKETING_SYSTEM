
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/FrontEnd/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="login-fontend">
        <div class="row align-center">
            <div class="col-6">
                <h3>Đăng Nhập</h3>
                <form id="form-register">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email hoặc số điện thoại</label>
                        <input type="text" class="form-control" id="user-name" placeholder="Email hoặc số điện thoại" autocomplete="off">
                    </div>
                    <div>
                        <label for="exampleInputEmail1">Mật Khẩu</label>
                        <input type="password" class="form-control" id="password" placeholder="Mật khẩu" autocomplete="off">
                    </div>
                    <button style="margin-top:20px;background-color:#0680f9 ; border-radius:5px" type="button" id="btn-login" class="btn btn-primary" onclick="Login()">Đăng nhập</button>
                </form>
            </div>
        </div>
    </div>

</div>

<footer class="site-footer-login wow fadeInUp" id="footer-login">
    <div class="container">

        <div class="row">
            <div class="col-md-6">

                <div class=" branding">
                    <img src="~/Content/font_end/images/logo-footer.png" alt="Site title" class="logo-icon">
                    <h1 class="site-title"><a href="#">Nexus</a></h1>
                    <h2 class="site-description">Quickly connecting the world.</h2>
                </div> <!-- .branding -->

                <p class="copy">Copyright 2014 NEXUS. designed by Themezy. All rights reserved</p>
            </div>

            <div class="col-md-6 align-right">

                <nav class="footer-navigation">
                    <a href="@Url.Action("Index","/News")">News</a>
                    <a href="@Url.Action("Index","/AboutUs")">About us</a>
                    <a href="@Url.Action("Index","/ServicePlanFE")">Services</a>
                    <a href="@Url.Action("Index","/Contact")">Contact</a>
                </nav> <!-- .footer-navigation -->

                <div class="social-links">
                    <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                    <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
                    <a href="#" class="pinterest"><i class="fa fa-pinterest"></i></a>
                </div> <!-- .social-links -->

            </div>
        </div>

    </div>
</footer> <!-- .site-footer -->
