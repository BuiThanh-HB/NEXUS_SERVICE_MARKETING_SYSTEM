@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/Content/images/icon.jpg">
    <title>Nexus System</title>
    @Styles.Render("~/main/css")
    @Scripts.Render("~/layout/js")
    @Scripts.Render("~/main/js")
    @Scripts.Render("~/bundle/js")
</head>
<body style="background: #f0f0f0;">
    @*<div class="divLoading" style="display: none">
            <img class="spinner" src="~/Content/images/index.rotate-pie-preloader-gif.svg" />
        </div>*@
    <div class="bg-image"></div>
    <div class="bg-text" style="height:520px;">
        <div class="col-md-12 px-0">
            <img src="~/Content/images/baotri.jpg" class="mt-3 mb-5" style="height:200px;width:auto;" />
        </div>

        @*<h3 class="mt-3 mb-3">ADMIN</h3>*@
        <div class="txtLogin row mt-3" id="txtLogin">
            <div class="col-md-12 col-12">
                <input type="text" class="form-control col-md-12 inputLogin" placeholder="Tài khoản" id="txtUsernameLogin" name="">
                <i class="iconUsernameLogin fa fa-user-o mt-1" style="color:black; position:absolute; right:25px;top:9px"></i>
            </div>
        </div>
        <div class="txtLogin row mt-1" id="txtLogin">
            <div class="col-md-12 col-12">
                <input type="password" class="form-control col-md-12 inputLogin" placeholder="Mật khẩu" id="txtPasswordLogin" name="">
                <i class="iconPasswordLogin fa fa-unlock-alt mt-1" style="color:black; position:absolute; right:25px;top:9px"></i>
            </div>
        </div>
        <button class="col-md-12 btn btn-default mt-3 btnLogin" id="btnLogin" onclick="Login()">ĐĂNG NHẬP</button>
    </div>

    @*modal loading *@
    <div class="modal" id="modalLoad" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content text-center py-3">
                <div class="modal-body text-center">
                    <i class="fa fa-spinner text-success fa-spin" style="font-size: 40px;"></i>
                    <div class="col-md-12 text-center mt-2">
                        <span>Đang xử lý</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

<script>

$(document).ready(function () {

    $("#txtUsernameLogin").focus();
    $('.inputLogin').keypress(function (e) {
        var key = e.which;
        if (key == 13) {
            $("#btnLogin").click();
        }
    });

});

</script>