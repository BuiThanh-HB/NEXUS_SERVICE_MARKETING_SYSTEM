@using Data.Utils;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12 mt-5">
    <div class="breadcrumb-holder">
        <div class="row pb-3 pt-3">
            <div class="text-dark">
                <h4><i class="fa fa-fw fa-shopping-basket"></i> Quản lý đơn hàng</h4>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-3 col-12 mt-1">
        <input class="form-control" id="txt-search-key" placeholder="Nhập mã đơn hàng" />
    </div>
    <div class="col-md-3 col-12 mt-1">
        <input type="text" class="form-control relative-icon-calendar date" id="txt-from-date" placeholder="Từ ngày" />
        <i class="fa fa-calendar absolute-icon-calendar"></i>
    </div>
    <div class="col-md-3 col-12 mt-1">
        <input type="text" class="form-control relative-icon-calendar date" id="txt-to-date" placeholder="Đến ngày" />
        <i class="fa fa-calendar absolute-icon-calendar"></i>
    </div>
    <div class="col-md-3 col-12 mt-1">
        <select class="form-control" id="status-value-search">
            <option selected disabled hidden>--Trạng thái--</option>
            <option value="-1">Tất cả</option>
            <option value="@SystemParam.PENDING" class="text-warning">Chờ xác nhận</option>
            <option value="@SystemParam.ACCEPT" class="text-primary">Đã xác nhận</option>
            <option value="@SystemParam.COMPLETE" class="text-success">Hoàn thành</option>
            <option value="@SystemParam.CANCEL" class="text-danger">Hủy</option>
        </select>
    </div>
    <div class="col-md-3 offset-md-9 col-12 mt-1 float-right">
        <button class="btn btn-outline-primary float-right m-2" id="btn-search-order" onclick="SearchOrder()"><i class="fa fa-search"></i> Tìm kiếm</button>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12" id="tbl-order">
        @{ Html.RenderAction("Search", "Order", new { page = 1 });}
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#status-value-search').change(function () {
            SearchOrder();
        })
    })

    $(document).on("keyup", function (e) {
        if (e.keyCode == 13) {
            $("#btn-search-order").click();
        }
    });
</script>
